  "version": "0.2.0",
  "configurations": [
    {
      "name": "pytest justMyCode disabled",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      // https://github.com/microsoft/pylance-release/issues/4980
      "args": ["${input:pytestArgs}"],
      "justMyCode": false
    }
  ],
  "inputs": [
    {
      "id": "pytestArgs",
      "type": "promptString",
      "description": "args for pytest",
      "default": ""
    }
  ]
}
