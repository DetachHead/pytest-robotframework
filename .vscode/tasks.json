{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pdm install requirements",
      "type": "shell",
      "command": "./pw",
      "args": ["install"],
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "pdm update lockfile",
      "type": "shell",
      "command": "./pw",
      "args": ["pdm", "update"],
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "pdm refresh lockfile (no update)",
      "type": "shell",
      "command": "./pw",
      "args": ["pdm", "lock", "--refresh"],
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "pyright - current file",
      "type": "shell",
      "command": "./pw",
      "args": ["run", "pyright", "-p", "_pyrightconfig.json", "${file}"],
      // can't use pylance due to https://github.com/microsoft/pylance-release/issues/5201
      "problemMatcher": {
        "owner": "python",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": ".*\\((.*)\\)$",
            "code": 1
          },
          {
            "regexp": "\\s+((?:[a-zA-Z]:)?[^:]+):(\\d+):(\\d+)\\s-\\s(error|warning): (.*)",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "severity": "error"
      },
      "presentation": {
        "clear": true,
        "reveal": "never"
      }
    },
    {
      "label": "pyright - all files",
      "type": "shell",
      "command": "./pw",
      "args": ["run", "pyright", "-p", "_pyrightconfig.json"],
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "ruff - all files",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "ruff", "."],
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "ruff fix - all files",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "ruff", "--fix", "."],
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "pylint - all files",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "pylint", "pytest_robotframework", "tests"],
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "black - all files",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "black", "--color", "."],
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
